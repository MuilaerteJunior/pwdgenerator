<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PwdGenerator.MainPage">

    <!--
  PSEUDOCODE / PLAN:
  - Wrap all content in a ScrollView to allow vertical scrolling on small Android screens.
  - Use a VerticalStackLayout to stack t he main sections: password Entry, buttons, options, footer.
  - Place Generate / Copy buttons in a HorizontalStackLayout that shrinks/wraps naturally.
  - Use a FlexLayout for the option controls (capital letters, numbers, special chars, length).
    - Set FlexLayout.Wrap="Wrap" so items flow to new lines on narrow screens.
    - Give each option container a FlexLayout.Basis="48%" so two columns on wider screens and a single column on narrow screens.
    - Provide MinWidthRequest to keep pickers usable.
  - Preserve Picker names and ItemsSource so code-behind continues to work.
  - Keep footer labels aligned and readable on small devices.
  -->

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="18">

            <!-- Password display -->
            <Entry
        x:Name="entryPwd"
        Placeholder="Generated Password"
        IsReadOnly="True"
        Text="Click on generate!"
        VerticalOptions="Center"
        HorizontalOptions="FillAndExpand" />

            <!-- Buttons -->
            <HorizontalStackLayout Spacing="12" HorizontalOptions="FillAndExpand">
                <Button
          Text="Generate"
          WidthRequest="140"
          HorizontalOptions="Start"
          Clicked="BtnGenerate_Click" />
                <Button
          Text="Copy to clipboard"
          WidthRequest="160"
          HorizontalOptions="Start"
          Clicked="BtnCopy_Click" />
            </HorizontalStackLayout>

            <!-- Options area using FlexLayout to allow wrapping on small widths -->
            <Label Text="Options"
             FontAttributes="Bold"
             FontSize="Medium" />

            <FlexLayout Direction="Row"
                  Wrap="Wrap"
                  JustifyContent="Start"
                  AlignItems="Start"
                  Margin="0,6,0,0">

                <!-- Capital letters option -->
                <Frame Padding="10"
               Margin="6"
               CornerRadius="8"
               HasShadow="False"
               BackgroundColor="Transparent"
               FlexLayout.Basis="48%"                       
               MinimumWidthRequest="180">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Include capital letters" VerticalOptions="Center" />
                        <Picker x:Name="capitalsPicker" SelectedIndex="0">
                            <Picker.ItemsSource>
                                <x:Array Type="{x:Type x:Int16}">
                                    <x:Int16>0</x:Int16>
                                    <x:Int16>1</x:Int16>
                                    <x:Int16>2</x:Int16>
                                    <x:Int16>3</x:Int16>
                                    <x:Int16>4</x:Int16>
                                </x:Array>
                            </Picker.ItemsSource>
                        </Picker>
                    </VerticalStackLayout>
                </Frame>

                <!-- Numbers option -->
                <Frame Padding="10"
               Margin="6"
               CornerRadius="8"
               HasShadow="False"
               BackgroundColor="Transparent"
               FlexLayout.Basis="48%"
               MinimumWidthRequest="180">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Include numbers" VerticalOptions="Center" />
                        <Picker x:Name="numbersPicker" SelectedIndex="0">
                            <Picker.ItemsSource>
                                <x:Array Type="{x:Type x:Int16}">
                                    <x:Int16>0</x:Int16>
                                    <x:Int16>1</x:Int16>
                                    <x:Int16>2</x:Int16>
                                    <x:Int16>3</x:Int16>
                                    <x:Int16>4</x:Int16>
                                </x:Array>
                            </Picker.ItemsSource>
                        </Picker>
                    </VerticalStackLayout>
                </Frame>

                <!-- Special characters option -->
                <Frame Padding="10"
               Margin="6"
               CornerRadius="8"
               HasShadow="False"
               BackgroundColor="Transparent"
               FlexLayout.Basis="48%"
               MinimumWidthRequest="180">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Include special characters" VerticalOptions="Center"  />
                        <Picker x:Name="specialCharsPicker" SelectedIndex="0">
                            <Picker.ItemsSource>
                                <x:Array Type="{x:Type x:Int16}">
                                    <x:Int16>0</x:Int16>
                                    <x:Int16>1</x:Int16>
                                    <x:Int16>2</x:Int16>
                                    <x:Int16>3</x:Int16>
                                    <x:Int16>4</x:Int16>
                                </x:Array>
                            </Picker.ItemsSource>
                        </Picker>
                    </VerticalStackLayout>
                </Frame>

                <!-- Length option -->
                <Frame Padding="10"
               Margin="6"
               CornerRadius="8"
               HasShadow="False"
               BackgroundColor="Transparent"
               FlexLayout.Basis="48%"
               MinimumWidthRequest="180">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Password Length (6-50)" VerticalOptions="Center" />
                        <Picker x:Name="lengthPicker" SelectedIndex="0">
                            <Picker.ItemsSource>
                                <x:Array Type="{x:Type x:Int32}">
                                    <x:Int32>8</x:Int32>
                                    <x:Int32>10</x:Int32>
                                    <x:Int32>12</x:Int32>
                                    <x:Int32>16</x:Int32>
                                    <x:Int32>20</x:Int32>
                                    <x:Int32>24</x:Int32>
                                    <x:Int32>32</x:Int32>
                                    <x:Int32>40</x:Int32>
                                    <x:Int32>50</x:Int32>
                                </x:Array>
                            </Picker.ItemsSource>
                        </Picker>
                    </VerticalStackLayout>
                </Frame>

            </FlexLayout>

            <!-- Footer -->
            <HorizontalStackLayout Spacing="12" HorizontalOptions="FillAndExpand" Padding="0,10,0,0">
                <Label Text="by Muilaerte Junior"
               FontAttributes="Bold"
               FontSize="Small"
               VerticalOptions="Center"
               HorizontalOptions="StartAndExpand" />

                <Label Text="github.com/muilaertejunior"
               FontSize="Small"
               TextDecorations="Underline"
               TextColor="RoyalBlue"
               VerticalOptions="Center"
               HorizontalOptions="End" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
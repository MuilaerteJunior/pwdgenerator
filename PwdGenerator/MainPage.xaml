<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PwdGenerator.MainPage">

    <Grid Padding="20" RowSpacing="15" ColumnSpacing="15">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Entry 
        Grid.Row="0" 
        Grid.Column="0"
        Grid.ColumnSpan="3"
        Placeholder="Generated Password" 
        IsReadOnly="True" 
        Text="Click on generate!"
        VerticalOptions="Center"
        x:Name="entryPwd"/>

        <Button 
        Grid.Row="0" 
        Grid.Column="4" 
        Text="Generate" 
        WidthRequest="120" 
        Clicked="Button_Clicked"/>

        <HorizontalStackLayout 
            Grid.Row="2" 
            Grid.Column="0" 
            Spacing="20"
            VerticalOptions="Center">

            <Label 
            Text="Include a capital letter"
            VerticalOptions="Center" />
            
            <Picker 
                Grid.Row="1" 
                Grid.Column="0"
                SelectedIndex="0"
                x:Name="capitalsPicker">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:Int16}">
                        <x:Int16>0</x:Int16>
                        <x:Int16>1</x:Int16>
                        <x:Int16>2</x:Int16>
                        <x:Int16>3</x:Int16>
                        <x:Int16>4</x:Int16>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>


        </HorizontalStackLayout>

        <HorizontalStackLayout 
            Grid.Row="2" 
            Grid.Column="1"             
            Spacing="20"
            VerticalOptions="Center">

            <Label 
            Text="Include numbers"
            VerticalOptions="Center" />
            
            <Picker 
                Grid.Row="1" 
                Grid.Column="0"
                SelectedIndex="0"
                x:Name="numbersPicker">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:Int16}">
                        <x:Int16>0</x:Int16>
                        <x:Int16>1</x:Int16>
                        <x:Int16>2</x:Int16>
                        <x:Int16>3</x:Int16>
                        <x:Int16>4</x:Int16>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>


        </HorizontalStackLayout>

        <HorizontalStackLayout 
            Grid.Row="2" 
            Grid.Column="2" 
            Spacing="20"
            VerticalOptions="Center">

            <Label 
            Text="Include special characters"
            VerticalOptions="Center" />

            <Picker 
                Grid.Row="1" 
                Grid.Column="0"
                SelectedIndex="0"
                x:Name="specialCharsPicker">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:Int16}">
                        <x:Int16>0</x:Int16>
                        <x:Int16>1</x:Int16>
                        <x:Int16>2</x:Int16>
                        <x:Int16>3</x:Int16>
                        <x:Int16>4</x:Int16>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

        </HorizontalStackLayout>

        <HorizontalStackLayout 
            Grid.Row="2" 
            Grid.Column="3"             
            Spacing="20">

            <Label 
            Text="Password Length (6-50)"
            VerticalOptions="Center"/>

            <Picker 
                Grid.Row="1" 
                Grid.Column="0"
                SelectedIndex="0"
                x:Name="lengthPicker">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:Int32}">
                        <x:Int32>8</x:Int32>
                        <x:Int32>10</x:Int32>
                        <x:Int32>12</x:Int32>
                        <x:Int32>16</x:Int32>
                        <x:Int32>20</x:Int32>
                        <x:Int32>24</x:Int32>
                        <x:Int32>32</x:Int32>
                        <x:Int32>40</x:Int32>
                        <x:Int32>50</x:Int32>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

        </HorizontalStackLayout>

        <Label 
        Grid.Row="3" 
        Grid.Column="0" 
        Text="by Muilaerte Junior"
        FontAttributes="Bold"
        FontSize="Small"
        VerticalOptions="Center"
        HorizontalOptions="Start" />

        <Label 
        Grid.Row="3" 
        Grid.Column="1" 
        Text="github.com/muilaertejunior"
        FontSize="Small"
        TextDecorations="Underline"
        TextColor="RoyalBlue"
        VerticalOptions="Center"
        HorizontalOptions="End" />

    </Grid>
</ContentPage>

    